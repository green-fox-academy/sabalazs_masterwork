{
  "root": true,
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "prefer-destructuring": ["error", {"object": true, "array": false}]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "UniqueConstraintError": "readonly"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      },
      "plugins": [
        "jest"
      ]
    }
  ]
}
